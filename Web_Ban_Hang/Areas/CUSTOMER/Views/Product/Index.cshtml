<div class="row">
    <!-- Sidebar -->
    <div class="col-md-3">
        <h2>Category List</h2>
        <ul class="list-group shadow-sm rounded">
            @foreach (var c in (List<Category>)ViewBag.DSLOAI)
            {
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <a asp-area="CUSTOMER"
                           asp-controller="Product"
                           asp-action="FilterByCategory"
                           asp-route-categoryId="@c.Id"
                           class="text-decoration-none text-dark">
                        @c.Name
                        </a>
                    </li>
            }
        </ul>
    </div>

    <!-- Product List -->
    <div class="col-md-9">
        <h2>Product List</h2>
        <div id="product-list">
            <div class="row">
                @foreach (var product in (List<Product>)ViewBag.DSSP)
                {
                    <div class="col-md-4 mb-4">
                        <div class="card h-100">
                            <img src="/@product.ImageUrl" class="product-image" alt="@product.Name" />
                            <div class="card-body">
                                <h5 class="card-title">@product.Name</h5>
                                <p class="card-text text-danger">@product.Price.ToString("N0") đ</p>
                            </div>
                            <div class="d-flex gap-2 text-md-center"  >
                                <a asp-action="Information"asp-controller="Home" asp-route-id="@product.MaSP" class="btn btn-success">Xem</a>
                                <a asp-action="AddToCart"
                                   asp-controller="Cart"
                                   asp-area="CUSTOMER"
                                   asp-route-productId="@product.MaSP"
                                   class="btn btn-secondary w-50 text-center">
                                    Thêm Giỏ Hàng
                                </a>
                            </div>
                            <div class="card-footer text-muted text-end">
                                2 ngày trước
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
