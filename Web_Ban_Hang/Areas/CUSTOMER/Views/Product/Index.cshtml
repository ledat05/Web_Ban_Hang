<div class="row justify-content-center">
    <!-- Product List -->
    <div class="col-md-10 text-center">
        <h2 class="mb-4 text-center fw-bold">@ViewBag.CategoryName</h2>

        <div id="product-list">
            <div class="row">
                @foreach (var product in (List<Product>)ViewBag.DSSP)
                {
                    <div class="col-md-4 mb-4 d-flex">
                        <div class="card h-100 w-100 shadow-sm">
                            <div class="p-3">
                                <img src="/@product.ImageUrl" class="product-image img-fluid mx-auto d-block" style="height: 200px; object-fit: contain;" alt="@product.Name" />
                            </div>
                            <div class="card-body text-center">
                                <h5 class="card-title">@product.Name</h5>
                                <p class="card-text text-danger fw-bold">@product.Price.ToString("N0") đ</p>
                            </div>
                            <div class="d-flex justify-content-center gap-2 px-3 pb-2">
                                <a asp-action="Information"
                                asp-controller="Home"
                                   asp-route-id="@product.MaSP"
                                   class="btn btn-success w-50 text-center">Xem</a>
                                <a class="addtocart card-link btn btn-secondary w-50 text-center" data-productId="@product.MaSP" asp-action="AddToCart" asp-controller="Cart"
                                   asp-route-productId="@product.MaSP"> Add to cart </a>
                            </div>
                            <div class="card-footer text-muted text-end small">
                                2 ngày trước
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
