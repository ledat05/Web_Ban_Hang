@foreach (var product in Model)
{
    <div class="col-4 mb-3">
        <div class="card h-100 shadow-sm">
            <h3 class="card-header">@product.Name</h3>

            <div class="card-body">
                <h5 class="card-title">@product.Price.ToString("N0") đ</h5>
            </div>

            <img src="@product.ImageUrl" class="product-image" alt="@product.Name" />

            <div class="card-body">
                <div class="d-flex gap-2">
                    <a asp-action="Information"
                       asp-route-id="@product.MaSP"
                       class="btn btn-success w-50 text-center">Xem</a>
                    <a class="addtocart card-link btn btn-secondary w-50 text-center" data-productId="@product.MaSP" asp-action="AddToCart" asp-controller="Cart"
                       asp-route-productId="@product.MaSP"> Add to cart </a>
                </div>
                <div class="card-footer text-muted">
                    2 ngày trước
                </div>
            </div>

            </div>
    </div>
}
